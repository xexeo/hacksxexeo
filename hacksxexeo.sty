    {\hx@gensug[##1]{#2}{#3}{}{#2}{##2}{#2}}%
    %
    \expandafter\newcommand\csname#1rem\endcsname[2][]%
    {\hx@gensug[##1]{#2}{#3}{##2}{#2}{}{#2}}
    \expandafter\newcommand\csname#1troca\endcsname[3][]%
    {\hx@gensug[##1]{#2}{#3}{##2}{#2}{##3}{#2}}%
